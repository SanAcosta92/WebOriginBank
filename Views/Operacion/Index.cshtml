@{
    ViewData["Title"] = "Operaciones";
}

<h2 class ="text-center mb-4 display-6">Seleccione una operación</h2>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-warning">@TempData["Mensaje"]</div>
}


<form method="post" class="mt-4 d-flex justify-content-center">
    <div class="btn-group" role="group" aria-label="Operaciones" style="gap: 1rem;">
        <button type="submit" class="btn btn-primary btn-lg" style="width: 120px; height: 120px;" formaction="/Operacion/Balance">
            Balance
        </button>
        <button type="submit" class="btn btn-primary btn-lg" style="width: 120px; height: 120px;" formaction="/Operacion/Retiro">
            Retiro
        </button>
        <button type="submit" class="btn btn-primary btn-lg" style="width: 120px; height: 120px;" formaction="/Operacion/Reporte">
            Reportes
        </button>
    </div>
</form>


<form method="post" class="mt-4 d-flex justify-content-center">
    <button type="submit" class="btn btn-danger" formaction="/Operacion/Salir">Salir</button>
</form>